# Database
DATABASE_URL="postgresql://user:password@localhost:5432/hr_onboarding?schema=public"

# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-hr-email@ironlady.in
SMTP_PASS=your-app-specific-password
EMAIL_FROM="HR Team <hr@ironlady.in>"

# Google Calendar API
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback
GOOGLE_REFRESH_TOKEN=your-refresh-token

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Workflow Defaults (in hours)
OFFER_REMINDER_HOURS=72
FORM_REMINDER_HOURS=24
WELCOME_EMAIL_DAYS_BEFORE=1
HR_INDUCTION_TIME=09:30
CHECKIN_DAYS_AFTER=7
